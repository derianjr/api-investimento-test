{% extends 'base.html.twig' %}

{% block title %}Detalhes do Investimento{% endblock %}

{% block body %}
    <h1>Detalhes do Investimento</h1>
    <p><strong>ID:</strong> {{ investment.id }}</p>
    <p><strong>Criado em:</strong> {{ investment.createdAt|date('d/m/Y H:i') }}</p>
    <p><strong>Valor Inicial:</strong> R$ {{ investment.initialValue|number_format(2, ',', '.') }}</p>
    <p><strong>Saldo:</strong> R$ {{ investment.balance|number_format(2, ',', '.') }}</p>
    <p><strong>Retirado:</strong> {{ investment.isWithdrawn ? 'Sim' : 'NÃ£o' }}</p>
    {% if investment.isWithdrawn %}
        <p><strong>Data de Retirada:</strong> {{ investment.withdrawnAt|date('d/m/Y H:i') }}</p>
    {% endif %}
{% endblock %}
